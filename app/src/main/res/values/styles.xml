<resources>
    <!-- Base application theme. -->
    <!--
        <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="common_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">60dip</item>
        <item name="android:paddingRight">60dip</item>
        <item name="android:textSize">@dimen/text_size_17sp</item>
        <item name="android:textColor">@color/app_main_black_v3</item>
        <item name="android:layout_marginLeft">0dip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="ani_in_bottm_out_bottom">
        <item name="android:windowExitAnimation">@anim/out_to_bottom</item>
        <item name="android:windowEnterAnimation">@anim/in_from_bottom</item>
    </style>

    <style name="ani_in_right_out_right">
        <item name="android:windowExitAnimation">@anim/out_to_right</item>
        <item name="android:windowEnterAnimation">@anim/in_from_right</item>
    </style>

    <style name="defaultStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="textView" parent="defaultStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolBarTitleText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="transparentText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor" >#00000000</item>
    </style>


</resources>