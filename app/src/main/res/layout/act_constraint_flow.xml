<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="button1,button2,button3,button4,button5,button6"
        app:flow_horizontalGap="8dp"
        app:flow_verticalGap="8dp"
        app:flow_wrapMode="chain"
        app:flow_lastHorizontalStyle="packed"
        app:layout_constraintHorizontal_chainStyle ="packed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<!--    -->
<!--    app:flow_wrapMode="aligned" -->

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 1"
        android:background="@color/color_9096BB"
        app:layout_constraintTop_toTopOf="@+id/flow" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_9096BB"
        android:text="Button 2"
        app:layout_constraintTop_toTopOf="@+id/flow" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 3"
        android:background="@color/color_9096BB"
        app:layout_constraintTop_toTopOf="@+id/flow" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 4"
        android:background="@color/color_9096BB"
        app:layout_constraintTop_toTopOf="@+id/flow" />
    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 5"
        android:background="@color/color_9096BB"
        app:layout_constraintTop_toTopOf="@+id/flow" />
    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 6"
        android:background="@color/color_9096BB"
        app:layout_constraintTop_toTopOf="@+id/flow" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="button7,button8,button9,button10,button11"
        app:flow_horizontalGap="8dp"
        app:flow_verticalGap="8dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:flow_wrapMode="chain"
        app:flow_lastHorizontalStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/flow"
        app:layout_constraintHorizontal_chainStyle ="spread_inside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 7"
        app:layout_constraintTop_toTopOf="@+id/flow1" />
    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 8"
        app:layout_constraintTop_toTopOf="@+id/flow1" />
    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 9"
        app:layout_constraintTop_toTopOf="@+id/flow1" />
    <Button
    android:id="@+id/button10"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Button 8"
    app:layout_constraintTop_toTopOf="@+id/flow1" />
    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 8"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@+id/flow1" />
</androidx.constraintlayout.widget.ConstraintLayout>