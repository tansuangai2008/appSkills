<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_bg_v3"
    android:padding="@dimen/margin_12dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_use_room"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50dp"
            android:background="@drawable/bg_btn_blue"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_use_room"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Room 使用demo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_diy_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/bg_btn_blue"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/ll_use_room">

            <TextView
                android:id="@+id/tv_diy_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="canvas 画图" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_signature_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/bg_btn_blue"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/ll_diy_view">

            <TextView
                android:id="@+id/tv_signature_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="电子签名" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_recycle_helper"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/bg_btn_blue"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/ll_signature_view">

            <TextView
                android:id="@+id/tv_recycle_helper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="recycleView 拖动" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_night_mode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/bg_btn_blue"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/ll_recycle_helper">

            <TextView
                android:id="@+id/tv_night_mode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="App实现黑夜模式" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_photo_album"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/bg_btn_blue"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/ll_night_mode">

            <TextView
                android:id="@+id/tv_photo_album"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="相册" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_limit_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/bg_btn_blue"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/ll_photo_album">

            <TextView
                android:id="@+id/tv_limit_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="约束布局" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_touch_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/bg_btn_blue"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/ll_limit_layout">

            <TextView
                android:id="@+id/tv_touch_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="View的事件传递" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_storage_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/bg_btn_blue"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/ll_touch_layout">

            <TextView
                android:id="@+id/tv_storage_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="android 存储的问题" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_coroutines_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/bg_btn_blue"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/ll_storage_layout">

            <TextView
                android:id="@+id/tv_coroutines_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="android 协程试炼" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fragment_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/bg_btn_blue"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/ll_coroutines_layout">

            <TextView
                android:id="@+id/tv_fragment_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="fragment 试炼" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_animal_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/bg_btn_blue"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/ll_coroutines_layout">

            <TextView
                android:id="@+id/tv_animal_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="animal 试炼" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mvp_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/bg_btn_blue"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/ll_animal_layout">

            <TextView
                android:id="@+id/tv_mvp_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="mvp 试炼" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_viewbinding_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/bg_btn_blue"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/ll_mvp_layout">

            <TextView
                android:id="@+id/tv_viewbinding_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="viewBinding 试炼" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_databinding_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/bg_btn_blue"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/ll_mvp_layout">

            <TextView
                android:id="@+id/tv_databinding_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="dataBinding 试炼" />
        </LinearLayout>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>