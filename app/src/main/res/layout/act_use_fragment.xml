<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_show_fragment_a"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/_4d000000"
            android:gravity="center"
            android:text="显示fragment A"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/tv_show_fragment_b"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_7ed321"
            android:gravity="center"
            android:text="显示fragment B"
            android:textColor="@color/black" />
    </LinearLayout>
    <!-- 分割线 -->
    <View
        android:id="@+id/v_divider"
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="@dimen/margin_0.5dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:background="@color/green" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_fragments"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

